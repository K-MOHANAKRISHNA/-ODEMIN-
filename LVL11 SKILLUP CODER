--->last odd number index position

#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    for ( int i=n-1;i>=0;i--){
        if(arr[i]%2==1){
            cout<<i;
            break;
        }
    }
}

--->Last even element index

#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    for ( int i=n-1;i>=0;i--){
        if(arr[i]%2==0){
            cout<<i;
            break;
        }
    }
}

--->last odd number in an array

#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    for ( int i=n-1;i>=0;i--){
        if(arr[i]%2==1){
            cout<<arr[i];
            break;
        }
    }
}

--->Last even number in an array

#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    for ( int i=n-1;i>=0;i--){
        if(arr[i]%2==0){
            cout<<arr[i];
            break;
        }
    }
}

--->count of given element in an array

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,c=0;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int key;
    cin>>key;
    for(int i=0;i<n;i++){
        if(key==arr[i]){
            c=c+1;
        }
    }
    cout<<c;
}

