--->PALINDROME

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,rev=0,t;
    cin>>n;
    t=n;
    while(n!=0){
        rev=rev*10+n%10;
        n=n/10;
    }
    if(t==rev){
        cout<<"True";
    }
    else{
        cout<<"False";
    }
}
