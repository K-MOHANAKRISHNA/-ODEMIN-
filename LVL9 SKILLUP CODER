--->Even Sum

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,os=0;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
        if(arr[i]%2==0){
            os=os+arr[i];
        }
    }
    cout<<os;
}

--->Sum of Array

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,os=0;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
        os=os+arr[i];
    }
    cout<<os;
}




