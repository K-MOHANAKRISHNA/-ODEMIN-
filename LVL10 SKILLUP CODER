--->average of the array

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,s=0;
    float k;
    cin>>n;
    int arr[n];
    for(int i=1;i<=n;i++){
        cin>>arr[i];
        s=s+arr[i];
    }
    k=(float)s/n;
    cout<<fixed<<setprecision(2)<<k;
}


--->minimum element of an array

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,s;
    cin>>n;
    int arr[n];
    for(int i=1;i<=n;i++){
        cin>>arr[i];
    }
    s=arr[1];
    for(int i=2;i<=n;i++){
        if(arr[i]<s){
            s=arr[i];
        }
    }
    cout<<s;
}


--->maximum of an array

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,m;
    cin>>n;
    int arr[n];
    for(int i=1;i<=n;i++){
        cin>>arr[i];
    }
    m=arr[1];
    for(int i=2;i<=n;i++){
        if(arr[i]>m){
            m=arr[i];
        }
    }
    cout<<m;
}







