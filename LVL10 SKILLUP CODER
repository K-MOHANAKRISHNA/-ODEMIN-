--->element search in an array

#include <iostream>
using namespace std;
   
int main(){
    int  count, i, num;
    cin >> count;
    int input[count];
    for(i = 0; i < count; i++){
        cin >> input[i];
    }
      
    cin >> num;
      
    
    for(i = 0; i < count; i++){
        if(input[i] == num){
            cout<<"True";
            break;
        }
    }
      
    if(i == count){
        cout<<"False";
    }
 
    return 0;
}

--->average element is in array or not

#include <iostream>
using namespace std;
   
int main(){
    int  count, i, num,s=0;
    cin >> count;
    int input[count];
    for(i = 0; i < count; i++){
        cin >> input[i];
        s=s+input[i];
    }
      
    num=int(s/count);
      
    
    for(i = 0; i < count; i++){
        if(input[i] == num){
            cout<<"True";
            break;
        }
    }
      
    if(i == count){
        cout<<"False";
    }
 
    return 0;
}
--->average of the array

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,s=0;
    float k;
    cin>>n;
    int arr[n];
    for(int i=1;i<=n;i++){
        cin>>arr[i];
        s=s+arr[i];
    }
    k=(float)s/n;
    cout<<fixed<<setprecision(2)<<k;
}


--->minimum element of an array

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,s;
    cin>>n;
    int arr[n];
    for(int i=1;i<=n;i++){
        cin>>arr[i];
    }
    s=arr[1];
    for(int i=2;i<=n;i++){
        if(arr[i]<s){
            s=arr[i];
        }
    }
    cout<<s;
}


--->maximum of an array

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,m;
    cin>>n;
    int arr[n];
    for(int i=1;i<=n;i++){
        cin>>arr[i];
    }
    m=arr[1];
    for(int i=2;i<=n;i++){
        if(arr[i]>m){
            m=arr[i];
        }
    }
    cout<<m;
}







